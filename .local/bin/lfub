#!/bin/sh

# This is a wrapper script for lb that allows it to create image previews with
# ueberzug. This works in concert with the lf configuration file and the
# lf-cleaner script.

set -e

cleanup() {
    exec 3>&-
	rm "$FIFO_PREVIEWER"
}

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
	lf "$@"
else
	[ ! -d "$HOME/.cache/lf" ] && mkdir -p "$HOME/.cache/lf"
	export FIFO_PREVIEWER="$HOME/.cache/lf/ueberzug-$$"
	mkfifo "$FIFO_PREVIEWER"
	ueberzug layer -s <"$FIFO_PREVIEWER" -p json &
	exec 3>"$FIFO_PREVIEWER"
	trap cleanup HUP INT QUIT TERM PWR EXIT
	lf "$@" 3>&-

fi
